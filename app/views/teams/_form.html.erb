
<%= form_for(@team, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name, class: 'row' do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :group_id, class: 'row' do |f| %>
      <%= f.label :group_id, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :group_id, Group.order(:name), :id, :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", teams_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

