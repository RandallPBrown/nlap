<% @title = "Listing mfg_warranties" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/MfgWarranties/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_mfg_warranty_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Mfg warranty
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Dop</th>
                                          <th>Manufacturer</th>
                                          <th>Model number</th>
                                          <th>Warranty link</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @mfg_warranties.each do |mfg_warranty| %>
                  <tr>
                                          <td><%= mfg_warranty.dop %></td>
                                          <td><%= mfg_warranty.manufacturer %></td>
                                          <td><%= mfg_warranty.model_number %></td>
                                          <td><%= mfg_warranty.warranty_link %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), mfg_warranty, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_mfg_warranty_path(mfg_warranty), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), mfg_warranty, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @mfg_warranties.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No mfg_warranties.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @mfg_warranties if @mfg_warranties.respond_to?(:total_pages) %>
                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
