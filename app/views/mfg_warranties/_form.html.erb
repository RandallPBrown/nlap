
<%= form_for(@mfg_warranty, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :dop, class: 'row' do |f| %>
      <%= f.label :dop, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :dop, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :model_number, class: 'row' do |f| %>
      <%= f.label :model_number, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :model_number, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :warranty_link, class: 'row' do |f| %>
      <%= f.label :warranty_link, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :warranty_link, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", mfg_warranties_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

