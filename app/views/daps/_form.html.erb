
<%= form_for(@dap, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :description, class: 'row' do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :ddate, class: 'row' do |f| %>
      <%= f.label :ddate, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :ddate, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :user, class: 'row' do |f| %>
      <%= f.label :user, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :user_id, User.order(:first_name), :id, :full_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :writeup, class: 'row' do |f| %>
      <%= f.label :writeup, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :writeup_id, Writeup.order(:name), :id, :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>  

    <%= f.form_group :wunature, class: 'row' do |f| %>
      <%= f.label :wunature, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :wunature_id, Wunature.order(:description), :id, :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>  
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", daps_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

