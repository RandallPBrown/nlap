
<%= form_for(@dap, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :user_id, class: 'row' do |f| %>
      <%= f.label 'Agent', class: 'control-label col-md-12' %>
      <div class='col-12 col-md-12'>
        <%= f.grouped_collection_select :user_id, Department.order(:id), :users, :name, :id, :full_name, {}, {'data-live-search': true, :class=>'selectpicker text-dark'} %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :writeup, class: 'row' do |f| %>
      <%= f.label 'Severity', class: 'control-label col-md-12' %>
      <div class='col-12 col-md-12'>
        <%= f.collection_select :writeup_id, Writeup.order(:name), :id, :name, {}, {:class=>'form-control form-control-sm text-dark'} %>
        <%= f.error_messages %>
      </div>
    <% end %>  

    <%= f.form_group :wunature, class: 'row' do |f| %>
      <%= f.label 'Type', class: 'control-label col-md-12' %>
      <div class='col-12 col-md-12'>
        <%= f.collection_select :wunature_id, Wunature.order(:description), :id, :description, {}, {:class=>'form-control form-control-sm text-dark'} %>
        <%= f.error_messages %>
      </div>  
    <% end %>

    <%= f.form_group :ddate, class: 'row' do |f| %>
      <%= f.label 'Date', class: 'control-label col-md-12' %>
      <div class='col-12 col-md-12'>
        <%= f.date_field :ddate, class: 'form-control form-control-sm text-dark' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description, class: 'row' do |f| %>
      <%= f.label 'Description', class: 'control-label col-md-12' %>
      <div class='col-12 col-md-12'>
        <%= f.text_field :description, class: 'form-control form-control-sm text-dark' %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", daps_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

