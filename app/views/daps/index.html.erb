<%= stylesheet_link_tag "pagination.css" %>
<% @title = "Listing Disciplinary Actions" %>

<% content_for :description do %>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_dap_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Dap
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <div class="mx-auto">
              <%= form_tag(daps_path, method: "get") do %>
                <%= text_field_tag :search, nil, placeholder: "(Name/Department/Description)...", class: "form-control" %>
                <%= submit_tag "", style: "display: none;" %>
              <% end %>
              </div>
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Nature of Incident</th>
                                          <th>Date</th>
                                          <th>Agent</th>
                                          <th>Type</th>
                                          <th>Foo</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @daps.each do |dap| %>
                  <tr>
                                          <td><%= dap.wunature.description %></td>
                                          <td><%= dap.ddate %></td>
                                          <td><%= dap.user.full_name %></td>
                                          <td><%= dap.writeup.name %></td>
                                          <td><%= dap.occurrence_since_dap %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), dap, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_dap_path(dap), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), dap, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @daps.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No daps.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                  <center><%= will_paginate @daps %></center>
                </div>
              </div>
            </div>
          </div>
