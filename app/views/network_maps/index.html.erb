<% @title = "Listing network_maps" %>

<%= stylesheet_link_tag "network_maps.css" %>
<% content_for :description do %>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_network_map_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Network map
      <% end %>
      <% end %>


<div class="container">
  <div class="row">
    <div class="col-9">
      <div class="card">
        <input id="pac-input" class="controls form-control" type="text" placeholder="Search Box" style="opacity: 60% !important">
        <div id="map" style="height: 500px"></div>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAf_3lQsQ2GBDCzK_QZ8U142Rg2THxUr3k&callback=initMap&libraries=places&callback=initAutocomplete"
            async defer></script>
      </div>
    </div>
    <div class="col-3">
      <div class="card p-1">
        <div id="capture" style="height: 500px; overflow-y: scroll !important">
              <div id="infowindow-content">
      <img src="" width="16" height="16" id="place-icon">
      <span id="place-name"  class="title"></span><br>
      <span id="place-address"></span>
    </div>




        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="card p-2">
        <div id="right-panel">
          <h2>Results</h2>
          <table class="table table-striped table-hover table-sm-responsive">
            <thead>
              <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
              </tr>
            </thead>
            <tbody id="places">
            </tbody>
          </table>
          <button id="more">More results</button>
        </div>
      </div>
    </div>
  </div>
</div>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <div class="table-responsive">
              <table class="table table-striped table-hover table-sm-responsive" hidden>
                <thead>
                  <tr>
                                        <th>id</th>
                                        <th>created_at</th>
                                        <th>updated_at</th>
                                        <th>servicerstatus</th>
                                        <th>self_servicing</th>
                                        <th>provider_number</th>
                                        <th>name</th>
                                        <th>address</th>
                                        <th>phone</th>
                                        <th>fax</th>
                                        <th>contracted</th>
                                        <th>sealed_system</th>
                                        <th>rating</th>
                                        <th>latitude</th>
                                        <th>longitutude</th>
                  </tr>
                </thead>
                <tbody>
                <% @network_maps.each do |network_map| %>
                  <tr>
                                        <td><%= network_map.id %></td>
                                        <td><%= network_map.created_at %></td>
                                        <td><%= network_map.updated_at %></td>
                                        <td><%= network_map.servicerstatus %></td>
                                        <td><%= network_map.self_servicing %></td>
                                        <td><%= network_map.provider_number %></td>
                                        <td><%= network_map.name %></td>
                                        <td><%= network_map.address %></td>
                                        <td><%= network_map.phone %></td>
                                        <td><%= network_map.fax %></td>
                                        <td><%= network_map.contracted %></td>
                                        <td><%= network_map.sealed_system %></td>
                                        <td><%= network_map.rating %></td>
                                        <td><%= network_map.latitude %></td>
                                        <td><%= network_map.longitude %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), network_map, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_network_map_path(network_map), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), network_map, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @network_maps.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No network_maps.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                  </div>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @network_maps if @network_maps.respond_to?(:total_pages) %>
                
                              </div>

            </div>
          </div>
