
<%= form_for(@incentive_setting, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :occupancy, class: 'row' do |f| %>
      <%= f.label :occupancy, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.text_field :occupancy, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :uph, class: 'row' do |f| %>
      <%= f.label :uph, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.text_field :uph, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :attendance, class: 'row' do |f| %>
      <%= f.label :attendance, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.text_field :attendance, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :quality, class: 'row' do |f| %>
      <%= f.label :quality, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.text_field :quality, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :error, class: 'row' do |f| %>
      <%= f.label :error, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.number_field :error, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :error_amount, class: 'row' do |f| %>
      <%= f.label :error_amount, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.text_field :error_amount, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :turntime, class: 'row' do |f| %>
      <%= f.label :turntime, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.text_field :turntime, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :contracts, class: 'row' do |f| %>
      <%= f.label :contracts, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.text_field :contracts, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :department_id, class: 'row' do |f| %>
      <%= f.label :department_id, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-8'>
        <%= f.collection_select :department_id, Department.order(:name), :id, :name, {},{ class: 'form-control' } %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", incentive_settings_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

