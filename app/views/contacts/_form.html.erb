
<%= form_for(@contact, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :priority, class: 'row' do |f| %>
      <%= f.label :priority, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.select :priority, ['Primary', 'Secondary'], class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :first_name, class: 'row' do |f| %>
      <%= f.label :first_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :first_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :last_name, class: 'row' do |f| %>
      <%= f.label :last_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :last_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :email, class: 'row' do |f| %>
      <%= f.label :email, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :phone, class: 'row' do |f| %>
      <%= f.label :phone, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :phone, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :dealer_id, class: 'row' do |f| %>
      <%= f.label :dealer_id, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :dealer_id, Dealer.order(:code), :id, :code, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", contacts_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

