<% @title = "Listing contacts" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Contacts/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_contact_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Contact
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <div class="table-responsive">
                <table class="table table-striped table-hover">
                  <thead>
                    <tr>
                                            <th>Priority</th>
                                            <th>First name</th>
                                            <th>Last name</th>
                                            <th>Email</th>
                                            <th>Phone</th>
                                            <th>Dealer</th>
                                          <th></th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @contacts.each do |contact| %>
                    <tr>
                                            <td><%= contact.priority %></td>
                                            <td><%= contact.first_name %></td>
                                            <td><%= contact.last_name %></td>
                                            <td><%= contact.email %></td>
                                            <td><%= contact.phone %></td>
                                            <td><%= contact.dealer %></td>
                                          <td class="actions text-right">
                        <div class="btn-group">
                          <%= link_to theme_icon_tag("eye"), contact, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                          <%= link_to theme_icon_tag("pencil-alt"), edit_contact_path(contact), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                          <%= link_to theme_icon_tag("trash"), contact, 'data-toggle': 'tooltip', title: 'Delete',
                          data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                        </div>
                        </td>
                      </tr>
                      <% end %>
                      <% if @contacts.length == 0 %>
                      <tr><td colspan=42 class='text-center'>No contacts.</td></tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @contacts if @contacts.respond_to?(:total_pages) %>
                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
