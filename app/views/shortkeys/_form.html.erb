
<%= form_for(@shortkey, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :name, class: 'row' do |f| %>
      <%= f.label :name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :body, class: 'row' do |f| %>
      <%= f.label :body, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :body, class: 'form-control form-control-sm', 'style': 'height: 100px !important;background-color: white !important;border-radius: 5px 5px 5px 5px !important' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :created_by, class: 'row' do |f| %>
      <%= f.label :created_by, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :created_by, value: current_user.full_name, class: 'form-control', readonly: true %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :department_id, class: 'row' do |f| %>
      <%= f.label :department_id, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :department_id, Department.order(:name), :id, :name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", shortkeys_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

