
<%= form_for(@mfg_part, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :part_name, class: 'row' do |f| %>
      <%= f.label :part_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :part_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :part_number, class: 'row' do |f| %>
      <%= f.label :part_number, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :part_number, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :manufacturer_id, class: 'row' do |f| %>
      <%= f.label :manufacturer_id, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <div class="input-group mb-3">
          <%= f.collection_select :manufacturer_id, Manufacturer.order(:name), :id, :name, class: 'form-control' %>
          <div class="input-group-append">
            <button class="btn btn-sm btn-primary">+</button>
          </div>
        </div>
      </div>
    <% end %>



  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", mfg_parts_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

