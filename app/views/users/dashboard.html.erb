<div class="container-fluid">
  <div class="row">
    <div class="col-9 hidepane">
      <div class="row">
        <div class="col-12">
          <!-- OCCURRENCE TABLE -->
          <div class="card inspectable">
            <div class="card-header d-flex align-items-center">
              <h6>List of Occurrences</h6>   
            </div>
            <div class="table-responsive" >
              <table class="table table-hover table-striped" id="userEntryTable">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Date</th>
                    <th>Expires</th>
                    <th>Description</th>
                    <th></th>
                  </tr>
                </thead>
                <% @user_entry.each do |entry| %>
                  <tr>
                    <td><%= entry.agent.user.full_name %></td>
                    <td><%= entry.occurrence.name.truncate(15) %></td>
                    <td><%= entry.edate %></td>
                    <td><%= entry.edate + 180.days %></td>
                    <td><%= entry.edesc.truncate(15) %></td>
                    <td class="actions text-right">
                          <div class="btn-group">
                            <%#= link_to theme_icon_tag("eye"), entry, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                          </div>
                          </td>
                  </tr>
                <% end %>
                <% if @user_entry.length == 0 %>
                    <tr><td colspan=42 class='text-center'>-- NO ACTIVE OCCURRENCES --</td></tr>
                <% end %>
              </table>
              <center><%= will_paginate @user_entry %></center>
            </div>
          </div>
          <!-- /OCCURRENCE TABLE -->
        </div>
      </div>

      
      <div class="row">
        <div class="col-12">
          <!-- DAP TABLE -->
          <div class="card inspectable">      
            <div class="card-header d-flex align-items-center">
