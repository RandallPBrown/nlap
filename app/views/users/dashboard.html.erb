            <script>
            var chart_labels = <%= raw @agent_chart_labels_effective %>;
            var chart_data = <%= raw @agent_chart_data_effective %>;
            var dataset_label = "Effective";
            var chart_type = 'bar';
            var ctx = document.getElementById("statChart").getContext('2d');
            var config = {
                type: 'bar',
                data: {
                    labels: chart_labels,
                    datasets: [{
                        label: dataset_label,
                        data: chart_data,
                        backgroundColor: '#8e8e8e',
                        borderColor: '#373737',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        yAxes: [{
                            ticks: {
                                stepSize: 1
                            }
                        }]
                    }
                }
            };
            var stat_chart = new Chart(ctx, config);
            $("#userChartEffective").click(function() {
                var chart_labels = <%= raw @agent_chart_labels_effective %>;
                var chart_data = <%= raw @agent_chart_data_effective %>;
                var dataset_label = "Effective";
                var data = stat_chart.config.data;
                data.datasets[0].data = chart_data;
                data.labels = chart_labels;
                data.datasets[0].label = dataset_label;
                stat_chart.update();
            });
            $("#userChartTotal").click(function() {
                var chart_labels = <%= raw @agent_chart_labels_total %>;
                var chart_data = <%= raw @agent_chart_data_total %>;
                var dataset_label = "Total";
                var data = stat_chart.config.data;
                data.datasets[0].data = chart_data;
                data.labels = chart_labels;
                data.datasets[0].label = dataset_label;
                stat_chart.update();
            });
            </script>
