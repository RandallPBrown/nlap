                <% if @user_dap.length == 0 %>
                    <tr><td colspan=42 class='text-center'>-- NO ACTIVE PROGRESSIVE ACTIONS --</td></tr>
                <% end %>
              </table>
              
            </div>
            <center><%= will_paginate @user_dap %></center>
          </div>
          <!-- /DAP TABLE -->
        </div>
      </div>
    </div>
    <div class="col-3 hidepane">
