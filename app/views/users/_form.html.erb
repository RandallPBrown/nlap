<% @title = "Sign up" %>



<div id="main" class="devise-1">
  <div class="container-fluid">
    <div class="row mt-5">
      <div class="col-12 col-md-12 mr-auto ml-auto">
        <div class="card">
          <div class="card-header bg-primary">
            <div class="row mx-auto">
              <%= image_tag('service_roots.png', size: "100x125", class: 'p-auto m-auto') %>
            </div>
          </div>
          <div class="card-body">
            <div class="container">
              <%= form_for (@user),
                html: { class: "form-horizontal" } do |f| %>
                <%= f.error_notification %>

                <%= f.form_group :email, class: "row" do |f| %>
                  <%= f.label :email, class: "form-label" %>
                  <%= f.email_field :email, autofocus: true, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <%= f.form_group :first_name, class: "row" do |f| %>
                  <%= f.label :first_name, class: "form-label" %>
                  <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <%= f.form_group :last_name, class: "row" do |f| %>
                  <%= f.label :last_name, class: "form-label" %>
                  <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <%= f.form_group :department_id, class: "row" do |f| %>
                  <%= f.label :department_id, class: "form-label" %>
                  <%= f.collection_select :department_id, Department.order(:id), :id, :name, {}, { :class => "form-control" } %>
                  <%= f.error_messages %>
                <% end %>

                <%= f.form_group :role, class: "row" do |f| %>
                  <%= f.label :role, class: "form-label" %>
                  <%= f.collection_select :role, Role.global, :name, :name, {}, { :class => "form-control text-capitalize" } %>
                  <%= f.error_messages %>
                <% end %>

                <%= f.form_group :password, class: "row" do |f| %>
                  <%= f.label :password, class: "form-label" %>
                  <%= f.password_field :password, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <%= f.form_group :password_confirmation, class: "row" do |f| %>
                  <%= f.label :password_confirmation, class: "form-label" %>
                  <%= f.password_field :password_confirmation, class: "form-control" %>
                  <%= f.error_messages %>
                <% end %>

                <div class="row d-flex align-items-center mt-5">
                  <%= f.submit "Sign up", class: "btn btn-primary ml-auto" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

