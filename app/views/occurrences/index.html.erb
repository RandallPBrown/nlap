<% @title = "Listing Occurrences" %>

<% content_for :description do %>

  <% end %>

  <% content_for :actions do %>
    <%= link_to new_occurrence_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Occurrence
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                                          <th>Name</th>
                                          <th>Type</th>
                                          <th>Date</th>
                                          <th>Description</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @occurrences.each do |occurrence| %>
                  <tr>
                                          <td><%= occurrence.name %></td>
                                          <td><%= occurrence.ovalue %></td>
                                          <td><%= occurrence.odate %></td>
                                          <td><%= occurrence.desc %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), occurrence, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_occurrence_path(occurrence), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), occurrence, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @occurrences.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No occurrences.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                </div>

                
                              </div>


              
            </div>
          </div>
