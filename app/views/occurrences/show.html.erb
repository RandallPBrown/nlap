<% @title = "Showing Occurrences" %>

<% content_for :description do %>

  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Name</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @occurrence.name %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Type</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @occurrence.ovalue %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Date</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @occurrence.odate %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Description</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @occurrence.desc %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_occurrence_path(@occurrence), class: 'btn btn-primary' %>
                <%= link_to 'Back', occurrences_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    
  </div>
</div>
