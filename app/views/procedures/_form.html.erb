
<%= form_for(@procedure, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :section, class: 'row' do |f| %>
      <%= f.label :section, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :section, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :goal, class: 'row' do |f| %>
      <%= f.label :goal, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :goal, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :description, class: 'row' do |f| %>
      <%= f.label :description, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.hidden_field :start, value: "00:00:00" %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", procedures_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

