<%= form_for message, remote: true do |f| %>
  <%= f.label 'Subject' %>:
  <%= f.text_field :subject, class: "form-control", 'id': 'fdsa' %>

  <%= f.label 'Body' %>:
  <%= f.text_area :content, class: "form-control", data: {textarea: "message"}, 'id': 'asdf' %>

  <%= f.hidden_field :chatroom_id, value: chatroom.id %>
  <%= f.submit "send", class: "btn btn-primary", data: {send: "message"}, "onclick": "$('#asdf').trigger('reset')" %>
<% end %>