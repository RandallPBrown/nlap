<% @title = "Listing pcmi_imports" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/PcmiImports/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_pcmi_import_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Pcmi import
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Status</th>
                                          <th>Priority</th>
                                          <th>Servicer</th>
                                          <th>Claim</th>
                                          <th>Invoice</th>
                                          <th>First name</th>
                                          <th>Last name</th>
                                          <th>Report date</th>
                                          <th>Repair date</th>
                                          <th>Email</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @pcmi_imports.each do |pcmi_import| %>
                  <tr>
                                          <td><%= pcmi_import.status %></td>
                                          <td><%= pcmi_import.priority %></td>
                                          <td><%= pcmi_import.servicer %></td>
                                          <td><%= pcmi_import.claim %></td>
                                          <td><%= pcmi_import.invoice %></td>
                                          <td><%= pcmi_import.first_name %></td>
                                          <td><%= pcmi_import.last_name %></td>
                                          <td><%= pcmi_import.report_date %></td>
                                          <td><%= pcmi_import.repair_date %></td>
                                          <td><%= pcmi_import.email %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), pcmi_import, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_pcmi_import_path(pcmi_import), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), pcmi_import, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @pcmi_imports.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No pcmi_imports.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @pcmi_imports if @pcmi_imports.respond_to?(:total_pages) %>
                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
