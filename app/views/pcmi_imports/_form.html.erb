
<%= form_for(@pcmi_import, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :status, class: 'row' do |f| %>
      <%= f.label :status, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :status, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :priority, class: 'row' do |f| %>
      <%= f.label :priority, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :priority, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :servicer, class: 'row' do |f| %>
      <%= f.label :servicer, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :servicer, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :claim, class: 'row' do |f| %>
      <%= f.label :claim, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :claim, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :invoice, class: 'row' do |f| %>
      <%= f.label :invoice, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :invoice, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :first_name, class: 'row' do |f| %>
      <%= f.label :first_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :first_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :last_name, class: 'row' do |f| %>
      <%= f.label :last_name, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :last_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :report_date, class: 'row' do |f| %>
      <%= f.label :report_date, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :report_date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :repair_date, class: 'row' do |f| %>
      <%= f.label :repair_date, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :repair_date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :email, class: 'row' do |f| %>
      <%= f.label :email, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :email, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", pcmi_imports_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

