<% @title = "Showing agent" %>

<% content_for :description do %>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">First</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @agent.fname %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Last</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @agent.lname %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Hire</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @agent.hire %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Department</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @agent.department.name %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_agent_path(@agent), class: 'btn btn-primary' %>
                <%= link_to 'Back', agents_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    
  </div>
</div>
