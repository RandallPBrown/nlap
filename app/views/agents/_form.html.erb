
<%= form_for(@agent, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :fname, class: 'row' do |f| %>
      <%= f.label "First", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :fname, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :lname, class: 'row' do |f| %>
      <%= f.label "Last", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :lname, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :hire, class: 'row' do |f| %>
      <%= f.label "Hire Date", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :hire, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :department_id, class: 'row' do |f| %>
      <%= f.label "Department", class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :department_id, Department.order(:id), :id, :name %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", agents_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

