<% @title = "New Part" %>



<% content_for :description do %>
  <% end %>

  <div class="container">
    <div class="row">
      <div id="content" class="col-12 col-md-12">
        <div class="card card-sheet">
          <div class="m-3">
            <h6 class="mt-3 ml-3"><%= fa_icon_tag "search" %> Part Number</h6>
            <%= form_tag(new_part_path, method: "get") do %>
              <%= text_field_tag :search, nil, class: "form-control form-control-sm", 'id': 'pn-search' %>
              <%= submit_tag "", style: "display: none;" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      <div id="content" class="col-12 col-md-6">
        <div class="card card-sheet">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Covered</th>
                                          <th>Number</th>
                                          <th>Name</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @parts.each do |part| %>
                  <tr>
                                          <td class="text-capitalize"><%= best_in_place part, :covered, :as => :select, :collection => {"pending" => "Pending", "not-covered" => "Not-Covered", "covered" => "Covered", "special" => "Special"} %></td>
                                          <td><%= best_in_place part, :part_number, :as => :input %></td>
                                          <td><%= part.part_name %></td>
                                          
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), part, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_part_path(part), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), part, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @parts.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No parts.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
          </div>
        </div>
      </div>
      <div id="content" class="col-12 col-md-6">
        <div class="card card-sheet">
          <div class="card-body">
            <%= form_for(@part, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :part_number, class: 'row' do |f| %>
      <%= f.label 'Number', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.text_field :part_number, class: 'form-control', 'id': 'pn-form', 'readonly': 'true' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :part_name, class: 'row' do |f| %>
      <%= f.label 'Name', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.text_field :part_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :part_description, class: 'row' do |f| %>
      <%= f.label 'Description', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.text_area :part_description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :product_id, class: 'row' do |f| %>
      <%= f.label 'Product', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.collection_select :product_id, Product.order(:id), :id, :pname, {}, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :buying_group_id, class: 'row' do |f| %>
      <%= f.label 'Buying Group', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.collection_select :buying_group_id, BuyingGroup.order(:id), :id, :bgname, {}, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :dop, class: 'row' do |f| %>
      <%= f.label 'Purchased', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.date_select :dop, class: 'datepicker' %>
        <%= f.error_messages %>
      </div>
    <% end %>

<!--     <%= f.form_group :covered, class: 'row' do |f| %>
      <%= f.label 'Status', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.select :covered, options_for_select(['pending', 'covered', 'not-covered', 'special']), class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %> -->

<%= f.hidden_field :covered, value: 'pending' %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", parts_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

<script>
$('#pn-search').keyup(function() {
    $('#pn-form').val($(this).val());
});


$('#pn-form').keyup(function() {
    $('#pn-search').val($(this).val());
});
</script>