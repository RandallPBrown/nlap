<% @title = "New Part" %>
<script>
  $(document).ready( function () {
    $('#parts_index').DataTable();
} );
</script>


<% content_for :description do %>
  <% end %>

  <div class="container">
    <div class="row">
      <div id="content" class="col-12 col-md-7">
        <div class="card">
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover table-sm-responsive display" id="parts_index">
                <thead>
                  <tr>
                                          <th>Covered</th>
                                          <th>Approved By</th>
                                          <th>Number</th>
                                          <th>Name</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @parts.each do |part| %>
                  <tr>
                                          <td class="text-capitalize"><%= part.covered %></td>
                                          <td><%= part.approved_by %></td>
                                          <td><%= part.part_number.truncate(15) %></td>
                                          <td><%= part.part_name.truncate(15) %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), part, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @parts.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No parts.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
          </div>
        </div>
      </div>
      <div id="content" class="col-12 col-md-5">
        <div class="row">
          <div class="card p-2">
            <div class="col-12 col-md-12">
              <center>
                <a class="btn btn-primary mr-3" href="../products"><%= fa_icon_tag "plus" %> PRODUCT</a>
                <a class="btn btn-primary ml-3" href="../buying_groups"><%= fa_icon_tag "plus" %> BUYING GROUP</a>
              </center>
            </div>
          </div>
        </div>
        <div class="row">
        <div class="card">
          <div class="card-body">
            <%= form_for(@part, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>
  <center><h3>PART INQUIRY</h3></center><hr>
  <div class="form-inputs">
    <%= f.form_group :part_number, class: 'row' do |f| %>
      <%= f.label 'Number', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.text_field :part_number, class: 'form-control', 'id': 'pn_form', 'readonly': 'true' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :part_name, class: 'row' do |f| %>
      <%= f.label 'Name', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.text_field :part_name, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :part_description, class: 'row' do |f| %>
      <%= f.label 'Description', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.text_area :part_description, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :product_id, class: 'row' do |f| %>
      <%= f.label 'Product', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.collection_select :product_id, Product.order(:id), :id, :pname, {}, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :buying_group_id, class: 'row' do |f| %>
      <%= f.label 'Buying Group', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.collection_select :buying_group_id, BuyingGroup.order(:id), :id, :bgname, {}, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :source, class: 'row' do |f| %>
      <%= f.label 'Source Link', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.text_field :source, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :dop, class: 'row' do |f| %>
      <%= f.label 'Purchased', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.date_select :dop, class: 'datepicker' %>
        <%= f.error_messages %>
      </div>
    <% end %>

<!--     <%= f.form_group :covered, class: 'row' do |f| %>
      <%= f.label 'Status', class: 'control-label col-md-3' %>
      <div class='col-12 col-md-9'>
        <%= f.select :covered, options_for_select(['pending', 'covered', 'not-covered', 'special']), class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %> -->

<%= f.hidden_field :covered, value: 'pending' %>
<%= f.hidden_field :submitted_by, value: current_user.full_name %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", parts_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

