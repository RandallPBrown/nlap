<% @title = "Showing Part" %>

<% content_for :description do %>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Part number</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.part_number %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Part name</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.part_name %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Part description</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.part_description %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Product</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.product.pname %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Buying group</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.buying_group.bgname %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Dop</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.dop %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Covered</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.covered %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Source Link</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.source %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Approved By</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.approved_by %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-3 form-label text-capitalize">Approval Notes</label>
                <div class="col-12 col-md-9 form-control uneditable-input">
                  <span>
                    <%= @part.note %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_part_path(@part), class: 'btn btn-primary' %>
                <%= link_to 'Back', parts_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>