<% @title = "Listing Write-Ups" %>

<% content_for :description do %>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_writeup_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Writeup
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Name</th>
                                          <th>Desc</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @writeups.each do |writeup| %>
                  <tr>
                                          <td><%= writeup.name %></td>
                                          <td><%= writeup.desc %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), writeup, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_writeup_path(writeup), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), writeup, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @writeups.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No writeups.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
