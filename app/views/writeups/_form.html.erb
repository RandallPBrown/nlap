
<%= form_for(@writeup, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :type, class: 'row' do |f| %>
      <%= f.label :type, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :type, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :wdate, class: 'row' do |f| %>
      <%= f.label :wdate, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :wdate, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :desc, class: 'row' do |f| %>
      <%= f.label :desc, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :desc, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", writeups_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

