
<%= form_for(@tool, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :receipt, class: 'row' do |f| %>
      <%= f.label :receipt, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :receipt, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", tools_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

