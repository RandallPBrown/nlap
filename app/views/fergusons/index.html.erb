<% @title = "Listing fergusons" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Fergusons/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_ferguson_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Ferguson
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>User</th>
                                          <th>District</th>
                                          <th>So number</th>
                                          <th>Customer name</th>
                                          <th>Sp name</th>
                                          <th>Address</th>
                                          <th>Manufacturer</th>
                                          <th>Product</th>
                                          <th>Model</th>
                                          <th>Escalated</th>
                                          <th>Leaking</th>
                                          <th>Customer fo</th>
                                          <th>Servicer fo</th>
                                          <th>Dealer fo</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @fergusons.each do |ferguson| %>
                  <tr>
                                          <td><%= ferguson.user %></td>
                                          <td><%= ferguson.district %></td>
                                          <td><%= ferguson.so_number %></td>
                                          <td><%= ferguson.customer_name %></td>
                                          <td><%= ferguson.sp_name %></td>
                                          <td><%= ferguson.address %></td>
                                          <td><%= ferguson.manufacturer %></td>
                                          <td><%= ferguson.product %></td>
                                          <td><%= ferguson.model %></td>
                                          <td><%= ferguson.escalated %></td>
                                          <td><%= ferguson.leaking %></td>
                                          <td><%= ferguson.customer_fo %></td>
                                          <td><%= ferguson.servicer_fo %></td>
                                          <td><%= ferguson.dealer_fo %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), ferguson, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_ferguson_path(ferguson), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), ferguson, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @fergusons.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No fergusons.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @fergusons if @fergusons.respond_to?(:total_pages) %>
                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
