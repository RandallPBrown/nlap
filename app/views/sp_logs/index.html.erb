<script>



  $(document).ready(function(){
    var t = $('#sp-log-table').DataTable({
      "pageLength": 10,
      select: true,
      order: [1, 'asc']
    });
    var buttons = new $.fn.dataTable.Buttons(t, {
       buttons: [
         'copy',
         'csv'
      ]
    }).container().appendTo($('#buttons'));
  })
</script>