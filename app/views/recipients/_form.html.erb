
<%= form_for(@recipient, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :user_id, class: 'row' do |f| %>
      <%= f.label 'User: ', class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :user_id, User.order(:first_name), :id, :full_name,  class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", recipients_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

