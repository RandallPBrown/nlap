<div class="modal-header bg-primary">
	<h3 class="modal-title text-white font-weight-bold m-auto" id="exampleModalLabel">DISPUTE ERROR</h3>
</div>
<div class="modal-body" id="modal-dispute">
	<%= form_for(@err_log, html: { class: 'form-horizontal' }) do |f| %>
			<%= f.error_notification %>
	    <%= f.form_group :dispute, class: 'row' do |f| %>
	      <%= f.label 'Description', class: 'control-label col-md-3' %>
	      <div class='col-12 col-md-9'>
	        <%= f.text_area :dispute, class: 'form-control form-control-sm' %>
	        <%= f.error_messages %>
	      </div>
	    <% end %>
		<%= f.hidden_field :err_status_id, value: '' %>
	  	<div class="d-flex">
	    	<div class="ml-auto">
	      		<%= f.submit class: 'btn btn-primary' %>
	    	</div>
	  	</div>
	<% end %>
</div>
<div class="modal-footer">
</div>
