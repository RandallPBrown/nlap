<script>
    $(document).ready(function() {
    /* Activating Best In Place */
    jQuery(".best_in_place").best_in_place();
  });

    $(document).ready( function () {
    $('#error_index_all').DataTable();
  });
</script>
<style>

</style>

      <div class="container">
        <div class="row">
          <div class="col-9">
            <div class="card">
                
              <div class="card-body" style="height:400px;overflow-y: scroll;">
                <h5 class="text-uppercase m-auto font-weight-bold">PENDING APPROVAL ERRORS</h5>
                <div class="table-responsive">
                  <table class="table table-striped table-hover display border rounded" id="parts_index_pending">
                    <thead>
                    <tr>
                                            <th>Agent</th>
                                            <th>Department</th>
                                            <th>Date</th>
                                            <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% @err_logs.each do |err_log| %>
                      <tr data-toggle="collapse" data-target="#accordion<%= err_log.id %>" class="accordion-toggle" data-href="#accordion<%= err_log.id %>">
                                            <td><%= err_log.user.full_name %></td>
                                            <td><%= err_log.department.name %></td>
                                            <td><%= err_log.errdate %></td>
                                            <td><%= err_log.err_status.statusname %></td>
                        
                        </tr>
                        <tr>
                          <td colspan="10" class="hiddenrow">
                            <div id="accordion<%= err_log.id %>" class="collapse">
                              <div class="card m-1 p-1">
                                <%= form_for(err_log, html: { class: 'form-horizontal' }) do |f| %>
                                  <%= f.error_notification %>

                                  <div class="form-inputs">
                                  <div class="row">  
                                    <div class="col-6">
                                      <div class="row p-1">
                                        <div class="col-3">
                                          <label>Error Type:</label>
                                        </div>
                                        <div class="col-9">
                                          <%= f.collection_select :err_name_id, ErrName.order(errname: :desc), :id, :errname, {}, {:class=>'form-control form-control-sm text-dark'} %>
                                        </div>
                                      </div>
                                      <div class="row p-1">
                                        <div class="col-3">
                                          <label>Error Cost</label>
                                        </div>
                                        <div class="col-9">  
                                          <%= f.number_field :err_cost, class: 'form-control form-control-sm text-dark' %>
                                        </div>
                                      </div>
                                      <div class="row p-1">
                                        <div class="col-3">
                                          <label>Trainer:</label>
                                        </div>
                                        <div class="col-9">
                                          <%= f.collection_select :approved_by, @approved_by, :full_name, :full_name, {}, {:class=>'form-control form-control-sm text-dark'} %>
                                        </div>
                                      </div>
                                      <div class="row p-1">
                                        <div class="col-3">
                                          <label>Type:</label>
                                        </div>
                                        <div class="col-9">  
                                          <%= f.collection_select :err_type_id, ErrType.order(:description), :id, :description, {}, {:class=>'form-control form-control-sm text-dark'} %>
                                        </div>
                                      </div>
                                      <div class="row p-1">
                                        <% if err_log.dispute.present? %>
                                          <div class="col-3">
                                            <label>Trainer Response:</label>
                                          </div>
                                          <div class="col-9">  
                                            <%= f.text_area :dispute_response, class: "form-control form-control-sm text-dark" %>
                                          </div>
                                        <% else %>
                                          <div class="col-3">
                                            <label>Notes:</label>
                                          </div>
                                          <div class="col-9">  
                                            <%= f.text_area :err_notes, class: "form-control form-control-sm text-dark" %>
                                          </div>
                                        <% end %>
                                      </div>
                                    </div>
                                    <div class="col-6" style="overflow-y: scroll">
                                      <% if err_log.errdesc.present? %>
                                      <div class="row p-1">
                                        <div class="col-12">
                                          <label>Incident Notes:</label>
                                        </div>
                                      </div>
                                      <div class="row p-1">
                                        <div class="col-12">
                                          <%= err_log.errdesc %>
                                        </div>
                                      </div>
                                      <% else %>
                                      <div class="row p-1">
                                        <div class="col-12">
                                          <label>Incident Notes:</label>
                                        </div>
                                      </div>
                                      <div class="row p-1">
                                        <div class="col-12">
                                          <span class="text-monospace">NO ERROR INFORMATION SUBMITTED</span>
                                        </div>
                                      </div>
                                      <% end %>
                                      <% if err_log.dispute.present? %>
                                      <hr>
                                      <div class="row p-1">
                                        <div class="col-12">
                                          <label>Dispute Notes:</label>
                                        </div>
                                      </div>
                                      <div class="row p-1">
                                        <div class="col-12">
                                          <%= err_log.dispute %>
                                        </div>
                                      </div>
                                      <% end %>
                                    </div>
                                  </div>
                                  <%= f.hidden_field :err_status_id, value: '3' %>
                                  </div>

                                  <div class="d-flex pt-3">
                                      <%= f.submit 'UPDATE', class: 'btn btn-block btn-primary' %>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                          </td>
                        </tr>
                        <% end %>
                        <% if @err_logs.length == 0 %>
                        <tr><td colspan=42 class='text-center'>No Errors</td></tr>
                        <% end %>
                        </tbody>
                      </table>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-3 d-flex align-items-stretch">
              <div class="card">
                Filters coming soon!
              </div>
            </div>
          </div>

        <div class="row">
          <div class="col-md-12">
            <div class="card">
              <div class="table-responsive">
                <table class="table table-striped table-hover table-sm-responsive p-1" id="error_index_all">
                  <thead>
                    <tr>
                                            <th>User</th>
                                            <th>Department</th>
                                            <th>Date</th>
                                            <th>Type</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                            <th>Submitted</th>
                                          <th></th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @allerrors.each do |err_log| %>
                    <tr>
                                            <td><%= err_log.user.full_name %></td>
                                            <td><%= err_log.department.name %></td>
                                            <td><%= err_log.errdate %></td>
                                            <td><%= err_log.err_name.errname %></td>
                                            <td><%= err_log.errdesc %></td>
                                            <td><%= err_log.err_status.statusname %></td>
                                            <td><%= err_log.errsubmitby %></td>
                                          <td class="actions text-right">
                        <div class="btn-group">
                          <%= link_to theme_icon_tag("eye"), err_log, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                          <%= link_to theme_icon_tag("pencil-alt"), edit_err_log_path(err_log), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                          <%= link_to theme_icon_tag("trash"), err_log, 'data-toggle': 'tooltip', title: 'Delete',
                          data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                        </div>
                        </td>
                      </tr>
                      <% end %>
                      <% if @err_logs.length == 0 %>
                      <tr><td colspan=42 class='text-center'>No err_logs.</td></tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
