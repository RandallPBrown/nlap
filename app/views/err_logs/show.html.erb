<% @title = "Showing err_log" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Err_Logs/show.html.erb</code>.</p>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">User</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @err_log.user.full_name %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Department</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @err_log.department.name %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Errdate</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @err_log.errdate %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Err name</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @err_log.err_name.errname %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Errdesc</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @err_log.errdesc %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Err status</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @err_log.err_status.statusname %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Errsubmitby</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @err_log.errsubmitby %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_err_log_path(@err_log), class: 'btn btn-primary' %>
                <%= link_to 'Back', err_logs_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
