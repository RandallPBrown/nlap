<% @title = "Listing kudos" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Kudos/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_kudo_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Kudo
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>User</th>
                                          <th>Date</th>
                                          <th>Kudo reason</th>
                                          <th>Description</th>
                                          <th>Submitted by</th>
                                          <th>Status</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @kudos.each do |kudo| %>
                  <tr>
                                          <td><%= kudo.user %></td>
                                          <td><%= kudo.date %></td>
                                          <td><%= kudo.kudo_reason %></td>
                                          <td><%= kudo.description %></td>
                                          <td><%= kudo.submitted_by %></td>
                                          <td><%= kudo.kudo_status.description %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), kudo, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_kudo_path(kudo), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), kudo, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @kudos.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No kudos.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @kudos if @kudos.respond_to?(:total_pages) %>
                
                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= paginate @kudos if @kudos.respond_to?(:current_page) %>
                              </div>

            </div>
          </div>
