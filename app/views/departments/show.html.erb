<% @title = "Showing department" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Departments/show.html.erb</code>.</p>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Name</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @department.name %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Description</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @department.desc %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_department_path(@department), class: 'btn btn-primary' %>
                <%= link_to 'Back', departments_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    
  </div>
</div>
