<% @title = "Listing Departments" %>

<% content_for :description do %>
  <span class="text-danger"><strong>**DO NOT EDIT OR DELETE WITHOUT CONSULTING PEYTON FIRST**</strong></span>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_department_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Department
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead>
                  <tr>
                                          <th>Name</th>
                                          <th>About</th>
                                          <th>Team</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @departments.each do |department| %>
                  <tr>
                                          <td><%= department.name %></td>
                                          <td><%= department.desc %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), department, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_department_path(department), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), department, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @departments.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No departments.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>
                </div>

                
                              </div>


              
            </div>
          </div>
