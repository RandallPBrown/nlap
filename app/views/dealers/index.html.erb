<% @title = "Listing dealers" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Dealers/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_dealer_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Dealer
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <div class="table-responsive">
                <table class="table table-striped table-hover table-sm-responsive">
                  <thead>
                    <tr>
                                            <th>Code</th>                                          
                                            <th>Buying group</th>
                                            <th>Appliance</th>
                                            <th>Electronic</th>
                                            <th>Furniture</th>
                                          <th></th>
                    </tr>
                  </thead>
                  <tbody>
                  <% @dealers.each do |dealer| %>
                    <tr>
                                            <td><%= dealer.code %></td>
                                            <td><%= dealer.buying_group.bgname %></td>
                                            <td><%= dealer.appliance %></td>
                                            <td><%= dealer.electronic %></td>
                                            <td><%= dealer.furniture %></td>
                                          <td class="actions text-right">
                        <div class="btn-group">
                          <%= link_to theme_icon_tag("eye"), dealer, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                          <%= link_to theme_icon_tag("pencil-alt"), edit_dealer_path(dealer), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                          <%= link_to theme_icon_tag("trash"), dealer, 'data-toggle': 'tooltip', title: 'Delete',
                          data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                        </div>
                        </td>
                      </tr>
                      <% end %>
                      <% if @dealers.length == 0 %>
                      <tr><td colspan=42 class='text-center'>No dealers.</td></tr>
                      <% end %>
                      </tbody>
                    </table>
                  </div>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @dealers if @dealers.respond_to?(:total_pages) %>
                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
