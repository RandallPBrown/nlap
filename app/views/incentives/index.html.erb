<% @title = "Listing incentives" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Incentives/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_incentive_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Incentive
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>User</th>
                                          <th>Occurrences</th>
                                          <th>Uph</th>
                                          <th>Quality</th>
                                          <th>Errors</th>
                                          <th>Occupancy</th>
                                          <th>Date</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @incentives.each do |incentive| %>
                  <tr>
                                          <td><%= incentive.user.full_name %></td>
                                          <td><%= incentive.user.agent.entries.effective.joins(:occurrence).sum(:ovalue) %></td>
                                          <td><%= incentive.uph %></td>
                                          <td><%= incentive.quality %></td>
                                          <td><%= incentive.improvement_opp %></td>
                                          <td><%= incentive.occupancy %></td>
                                          <td><%= incentive.date %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), incentive, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_incentive_path(incentive), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), incentive, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @incentives.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No incentives.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                  <div>
                    <%= form_tag import_incentives_path, multipart: true do %>
                      <%= file_field_tag :file %>
                      <%= submit_tag "IMPORT" %>
                    <% end %>
                  </div>
                </div>

                                  <%# Remove the trailing if condition if you're using pagination. %>
                  <%= will_paginate @incentives if @incentives.respond_to?(:total_pages) %>
                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
