<% @title = "Showing incentive" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Incentives/show.html.erb</code>.</p>
  <% end %>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-9">
      <div class="card">
        <div class="card-body">
          <div class="form-horizontal">
                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">User</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.user %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Uph</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.uph %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Quality</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.quality %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Errors</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.errors %>
                  </span>
                </div>
              </div>

                          <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Occupancy</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.occupancy %>
                  </span>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Occupancy</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.turntime %>
                  </span>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Occupancy</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.error_amount %>
                  </span>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Occupancy</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.contracts %>
                  </span>
                </div>
              </div>

              <div class="form-group row">
                <label class="col-12 col-md-2 form-label">Occupancy</label>
                <div class="col-12 col-md-10 form-control uneditable-input">
                  <span>
                    <%= @incentive.aht %>
                  </span>
                </div>
              </div>

                        <div class="d-flex">
              <div class="ml-auto">
                <%= link_to fa_icon_tag("pencil") + ' Edit', edit_incentive_path(@incentive), class: 'btn btn-primary' %>
                <%= link_to 'Back', incentives_path, class: 'btn' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
