
<%= form_for(@incentive, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :user, class: 'row' do |f| %>
      <%= f.label :user, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :user, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :uph, class: 'row' do |f| %>
      <%= f.label :uph, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :uph, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :aht, class: 'row' do |f| %>
      <%= f.label :aht, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :aht, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>


    <%= f.form_group :occupancy, class: 'row' do |f| %>
      <%= f.label :occupancy, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :occupancy, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :turntime, class: 'row' do |f| %>
      <%= f.label :turntime, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :turntime, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :contracts, class: 'row' do |f| %>
      <%= f.label :contracts, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_field :contracts, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :date, class: 'row' do |f| %>
      <%= f.label :date, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_field :date, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>
  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", incentives_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

