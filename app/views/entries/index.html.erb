<% @title = "Listing entries" %>

<% content_for :description do %>
  <p>Edit this template in <code>app/views/Entries/index.html.erb</code>.</p>
  <% end %>

  <% content_for :actions do %>
    <%= link_to new_entry_path, class: 'btn btn-primary btn-large pull-right' do %>
      <%= fa_icon_tag "plus" %> Add Entry
      <% end %>
      <% end %>

      <div class="container">
        <div class="row">
          <div class="col-md-9">
            <div class="card card-sheet sheet-condensed">
              <table class="table table-striped table-hover table-sm-responsive">
                <thead>
                  <tr>
                                          <th>Agent</th>
                                          <th>Department</th>
                                          <th>Occurrence</th>
                                          <th>Edate</th>
                                          <th>Edesc</th>
                                        <th></th>
                  </tr>
                </thead>
                <tbody>
                <% @entries.each do |entry| %>
                  <tr>
                                          <td><%= entry.agent.lname %></td>
                                          <td><%= entry.agent.department.name %></td>
                                          <td><%= entry.occurrence.ovalue %></td>
                                          <td><%= entry.edate %></td>
                                          <td><%= entry.edesc %></td>
                                        <td class="actions text-right">
                      <div class="btn-group">
                        <%= link_to theme_icon_tag("eye"), entry, 'data-toggle': 'tooltip', title: 'Show', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("pencil-alt"), edit_entry_path(entry), 'data-toggle': 'tooltip', title: 'Edit', class: "btn btn-link" %>
                        <%= link_to theme_icon_tag("trash"), entry, 'data-toggle': 'tooltip', title: 'Delete',
                        data: { confirm: 'Are you sure?' }, method: :delete, class: 'btn btn-link' %>
                      </div>
                      </td>
                    </tr>
                    <% end %>
                    <% if @entries.length == 0 %>
                    <tr><td colspan=42 class='text-center'>No entries.</td></tr>
                    <% end %>
                    </tbody>
                  </table>
                </div>

                
                              </div>


              <div id="sidebar" class="col-md-3">

                <ul class="nav nav-stacked nav-caret-left bg-gray-200 card small pb-2">
                  <li><h6 class="mt-3 ml-3">Sub Menu</h6></li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Vacation Days</a>
                  </li>
                  <li class="nav-item active">
                  <a class="nav-link" href="#">Salaries</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Disciplinary Items</a>
                  </li>
                  <li class="nav-item">
                  <a class="nav-link" href="#">Firings</a>
                  </li>
                </ul>
              </div> <!-- /#sidebar -->
            </div>
          </div>
