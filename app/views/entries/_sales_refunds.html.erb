<div class="row equal-cols">
  <div class="col-12 col-md-9 animate-fade-in-1000">
    <div class="card card-full-height inspectable">
      <!-- component-title: Graph -->
      <div class="card-header d-flex align-items-center">
        <h6 class="mr-auto">Occurrences by Department</h6>

        <div class="d-flex">
          <div class="dropdown">
            <button class="nav-link btn btn-icon " type="button" id="salesAndRefundButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= theme_icon_tag "more" %>
            </button>
            <div class="dropdown-menu dropdown-menu-right" aria-badgeledby="salesAndRefundButton">
              <a class="dropdown-item" href="#">Action</a>
              <a class="dropdown-item" href="#">Another action</a>
              <a class="dropdown-item" href="#">Something else here</a>
            </div>
          </div>
        </div>
      </div>
      <div class="card-body position-relative">
        <canvas id="myChart" width="400" height="200"></canvas>
<script>
var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'line',
    data: {
        labels: <%= raw Department.all.map { |m| [m.name]} %>,
        datasets: [{
            label: '# of Occurrences',
            data: [<%= @chart %>],
            backgroundColor: [
                'rgba(54, 162, 235, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(54, 162, 235, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        scales: {
            yAxes: [{
                ticks: {
                    beginAtZero:true
                }
            }]
        }
    }
});
</script>
      </div>
    </div>
  </div>

  <div class="col-12 col-md-3 animate-fade-in-1000">
    <div class="card card-full-height d-flex inspectable">
      <!-- component-title: Timeline Card -->
      <div class="card-header">
        <h6>RECENT ACTIVITY</h6>
      </div>
      <div class="card-body">
        <div class="timeline" style="height: 450px">
          <ul class="left-timeline">
          
              <li class="timeline-item">
                
                <time class=''>
                  <strong><%= Entry.all.order("id DESC").map { |m| m.occurrence.name}.first %></strong>
                </time>
                <div class="activity-text">
                  <strong><%= Entry.all.order("id DESC").map { |m| m.agent.lname}.first %>, <%= Entry.all.order("id DESC").map { |m| m.agent.fname}.first %></strong>
                  <small class="text-muted"><%= raw Entry.all.order("id DESC").map { |m| [m.agent.department.name]}.first.join(", ") %></small>
                </div>
              </li>
               <li class="timeline-item">
                
                <time class=''>
                  <strong><%= Entry.all.order("id DESC").map { |m| m.occurrence.name}.second %></strong>
                </time>
                <div class="activity-text">
                  <strong><%= Entry.all.order("id DESC").map { |m| m.agent.lname}.second %>, <%= Entry.all.order("id DESC").map { |m| m.agent.fname}.second %></strong>
                  <small class="text-muted"><%= raw Entry.all.order("id DESC").map { |m| [m.agent.department.name]}.second.join(", ") %></small>
                </div>
              </li>
