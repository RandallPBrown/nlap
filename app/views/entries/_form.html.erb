
<%= form_for(@entry, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.form_group :agent, class: 'row' do |f| %>
      <%= f.label :agent, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :agent_id, Agent.order(:id), :id, :lname %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :occurrence, class: 'row' do |f| %>
      <%= f.label :occurrence, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.collection_select :occurrence_id, Occurrence.order(:id), :id, :name %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :edate, class: 'row' do |f| %>
      <%= f.label :edate, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.date_select :edate, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

    <%= f.form_group :edesc, class: 'row' do |f| %>
      <%= f.label :edesc, class: 'control-label col-md-2' %>
      <div class='col-12 col-md-10'>
        <%= f.text_area :edesc, class: 'form-control' %>
        <%= f.error_messages %>
      </div>
    <% end %>

  </div>

  <div class="d-flex">
    <div class="ml-auto">
      <%= f.submit class: 'btn btn-primary' %>
      <%= link_to "Cancel", entries_path, class: 'btn btn-outline-default' %>
    </div>
  </div>
<% end %>

